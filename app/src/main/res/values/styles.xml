<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        //defaults
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#13171a</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorControlHighlight">#DF303030</item>
        <item name="videoplayer">#FFFFFF</item>

        //textfield bottom line color
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        //bottomnav and status bar
        <item name="colorPrimaryDark">#ECECEC</item>
        <item name="android:navigationBarColor">#ECECEC</item>
        <item name="uicolor">#ECECEC</item>
        <item name="toolbar">#ECECEC</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        //other defaults
        <item name="backgroundcolor">#FFFFFF</item>
        <item name="cardbackground">#D8D8D8</item>
        <item name="textcolor">#13171a</item>
        <item name="textfields">#ECECEC</item>
        <item name="hintcolor">#919191</item>
        <item name="iconcolor">#000000</item>
        <item name="coursecolor">#062C00</item>
        <item name="faint_color">#2D000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu_dark</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        //defaults
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorPrimary">@color/darker</item>
        <item name="colorControlHighlight">#C4292929</item>
        <item name="videoplayer">#1F1F1F</item>

        //textfield bottom line color
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        //bottomnav and status bar
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="android:navigationBarColor">@color/darker</item>
        <item name="uicolor">@color/darker</item>
        <item name="toolbar">@color/darker</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        //other defaults
        <item name="backgroundcolor">@color/dark</item>
        <item name="cardbackground">#222222</item>
        <item name="textcolor">#fff</item>
        <item name="textfields">#181818</item>
        <item name="hintcolor">#919191</item>
        <item name="iconcolor">#C9C5C5</item>
        <item name="faint_color">#2DFFFFFF</item>
        <item name="android:popupMenuStyle">@style/PopupMenu_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="MainDialog"  parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="android:navigationBarColor">@color/darker</item>
        <item name="uicolor">@color/darker</item>
        <item name="toolbar">@color/darker</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyCustomOverflowTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
    </style>

    <style name="PopupMenu_light" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#595959</item>
    </style>
    <style name="PopupMenu_dark" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#CECECE</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#000000</item>
    </style>


</resources>
